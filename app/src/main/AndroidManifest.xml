<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="video.videoassistant">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VideoAssistant">
        <activity android:name=".mainPage.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".me.urlManage.UrlManageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".me.jointManage.JointManageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".me.jsonManage.JsonActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".me.handleManage.HandleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".playPage.PlayActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait" />

        <service
            android:name="com.tencent.smtt.export.external.DexClassLoaderProviderService"
            android:label="dexopt"
            android:process=":dexopt"/>

        <uses-library android:name="org.apache.http.legacy" android:required="false"/>
    </application>

</manifest>